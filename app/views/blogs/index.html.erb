<%= content_for :title, "Alle Blogs" %>
<h1>
  Blogs
  <small>
    <% if params[:owner] %>
    <%= content_for :title, " von #{params[:owner]}" %>
    von <%= params[:owner] %>
    <% else %>
    alle
    <% end %>
  </small>
</h1>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Autor</th>
      <th>Beschreibung</th>
      <th>Funktionen</th>
    </tr>
  </thead>
  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= link_to blog.name, blog_entries_path(blog) %></td>
        <td><%= blog.owner %></td>
        <td><%= truncate blog.description, :length => 30 %></td>
        <td>
          <div class="btn-toolbar">
            <div class="btn-group">
              <%= link_to "Anzeigen", blog_entries_path(blog), :class => "btn btn-mini" %>
              <button class="btn btn-mini dropdown-toggle" data-toggle="dropdown">
                <span class="caret"></span>
              </button>
              <ul class="dropdown-menu">
                <li><%= link_to glyph(:edit), edit_blog_path(blog) %></li>
                <li><%= link_to glyph(:delete), blog, data: { confirm: "Bist Du sicher?"}, :method => :delete %></li>
              </ul>
            </div>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
