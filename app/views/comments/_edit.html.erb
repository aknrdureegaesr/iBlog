<% if @comment_preview %>
  <div class="preview">
    <%= render :partial => 'comments/show',
        :locals => { :this_is_preview => 1, :comment => edit_comment } %>
  </div>
<% end %>

<% path = edit_comment.new_record? ? create_comment_path : update_comment_path %>
<%= simple_form_for edit_comment, :url => path do |f| %>
  <%#= hidden_field_tag :owner_id, edit_comment.owner.id %>
  <%= f.input :content, :label => false, :input_html => { :rows => 4, :class => "span10" } %>
  <div>
    <% if edit_comment.new_record? %>
      <%= submit_tag 'Kommentar abgeben', :class => 'btn btn-primary' %>
      <%= submit_tag 'Vorschau', :class => 'btn btn-info' %>
    <% else %>
      <%= submit_tag 'Kommentar ändern', :class => 'btn btn-primary btn-xs' %>
      <%= submit_tag 'Vorschau', :class => 'btn btn-info btn-xs' %>
      <%= link_to 'Löschen', edit_comment, :method => :delete, :class => 'btn btn-danger btn-xs' %>
    <% end %>
  </div>
<% end %>
