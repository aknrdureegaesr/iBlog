<% if @comment_preview %>
  <div class="preview">
    <%= render :partial => 'comments/show',
        :locals => { :this_is_preview => 1, :comment => edit_comment } %>
  </div>
<% end %>

<% path = edit_comment.new_record? ? create_comment_path : update_comment_path %>
<%= simple_form_for(edit_comment, :url => path, html: { class: 'form-horizontal' }, wrapper: :horizontal_form) do |f| %>
  <%= f.input :content, :label => false, :input_html => { :rows => 4 } %>

    <% if edit_comment.new_record? %>
      <%= f.submit 'Kommentar abgeben', :class => 'btn btn-primary' %>
      <%= f.submit 'Vorschau', :class => 'btn btn-info' %>
    <% else %>
      <%= f.submit 'Kommentar ändern', :class => 'btn btn-primary btn-xs' %>
      <%= f.submit 'Vorschau', :class => 'btn btn-info btn-xs' %>
      <%= link_to 'Löschen', edit_comment, :method => :delete, :class => 'btn btn-danger btn-xs' %>
    <% end %>
<% end %>
